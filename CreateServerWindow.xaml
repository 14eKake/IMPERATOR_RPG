<Window x:Class="DiceRoller.CreateServerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Créer Serveur" Height="200" Width="300">
    <StackPanel Margin="10">
        <Label>Adresse IP:</Label>
        <TextBox x:Name="IpAddressTextBox" Text="127.0.0.1"/>
        <Label>Port:</Label>
        <TextBox x:Name="PortTextBox" Text="30000"/>
        <Button Content="Démarrer Serveur" Margin="5" Click="StartServer_Click"/>
    </StackPanel>
</Window>
