<Window x:Class="DiceRoller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
            <TextBlock x:Name="UsernameDisplay"  Width="100" Height="20" FontWeight="Bold" Margin="5" />
            <TextBox x:Name="InputBox" Width="600" Height="20" KeyDown="InputBox_KeyDown"/>
            <Button Content="Send" Click="Send_Click"/>
            <Button Content="Feuille de perso" Click="CharacterSheet_Click"/>
        </StackPanel>
        <RichTextBox x:Name="ChatBox" IsReadOnly="True" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
    </DockPanel>
</Window>
